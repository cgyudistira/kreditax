# KreditaX Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
KREDITAX_APP_NAME=KreditaX
KREDITAX_APP_VERSION=1.0.0
KREDITAX_DEBUG=false

# API Configuration
KREDITAX_HOST=0.0.0.0
KREDITAX_PORT=8000
KREDITAX_API_V1_PREFIX=/api/v1

# Model Paths
KREDITAX_MODEL_PATH=ml/artifacts/xgboost_model_latest.joblib
KREDITAX_PREPROCESSOR_PATH=ml/artifacts/preprocessor.joblib

# Security (CHANGE IN PRODUCTION!)
KREDITAX_SECRET_KEY=your-secret-key-change-in-production-min-32-characters
KREDITAX_ALGORITHM=HS256
KREDITAX_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Audit Logging
KREDITAX_AUDIT_LOG_PATH=data/audit_logs.csv
KREDITAX_ENABLE_AUDIT_LOGGING=true

# POJK Compliance
KREDITAX_DEFAULT_RISK_THRESHOLD=0.5
KREDITAX_ENABLE_EXPLAINABILITY=true

# CORS (comma-separated list)
KREDITAX_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
